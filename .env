# Configuración del Frontend - Sistema de Órdenes de Compra
# URL del backend API
REACT_APP_API_URL=http://localhost:3001/api

# Configuración de la aplicación
REACT_APP_APP_NAME=Sistema de Órdenes de Compra
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Configuración de la empresa
REACT_APP_COMPANY_NAME=Las Asambleas de Dios del Perú
REACT_APP_COMPANY_RUC=20123456789
REACT_APP_COMPANY_ADDRESS=Av. Principal 123, Lima, Perú
REACT_APP_COMPANY_PHONE=+51 1 234-5678

# Configuración de notificaciones
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_NOTIFICATION_DURATION=5000

# Configuración de validaciones
REACT_APP_MIN_RUC_LENGTH=11
REACT_APP_MAX_ITEMS_PER_ORDER=50

# Configuración de exportación
REACT_APP_ENABLE_CSV_EXPORT=true
REACT_APP_ENABLE_PDF_EXPORT=false

# Configuración de debug
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info
